pipeline {
    agent {
        docker {
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Build') {
            steps{
                sh 'cd api && bundle install'
            }
        }
        stage('Testing') {
            steps {
                sh 'cd api && rspec'
            }
        }
        stage('UAT') {
            steps {
                echo 'Aguardando testes de aceitação.'
                input message: 'Publicar?'
            }
        }
        stage('prod') {
            steps {
                echo 'Pronto para produção.'
            }
        }
    }
    post {
        always {
            junit 'api/logs/report.xml'
        }
    }
}